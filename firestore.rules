// firestore.rules
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 【Notifications】
    match /notifications/{notificationId} {
      // 自分の通知のみ読み取り許可
      allow read: if request.auth != null && request.auth.uid == resource.data.targetUserId;
      // 認証済みユーザーは、自分が送信者である通知のみ作成可能
      allow create: if request.auth != null && request.auth.uid == request.resource.data.fromUserId;
      // 自分の通知の isRead を false から true に更新することのみ許可
      allow update: if request.auth != null 
                    && request.auth.uid == resource.data.targetUserId
                    && request.resource.data.isRead == true
                    && resource.data.isRead == false;
      allow delete: if false;
    }

    // --- NEW RULE FOR COLLECTION GROUP ---
    match /{path=**}/likes/{userId} {
      allow read: if request.auth != null;
    }

    // 【Quests】
    match /quests/{questId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // 【Users】
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId
                    // accountName が変更されていない (既に設定済みの場合)
                    && (request.resource.data.accountName == resource.data.accountName
                    // または
              
                     // accountName がまだ存在しない (null から設定する場合)
                    || !(resource.data.keys().hasAny(['accountName'])));
    }
    
    // 【AccountNames】 (重複チェック用)
    match /accountNames/{name} {
      allow read: if request.auth != null;
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.uid;
      allow update, delete: if false;
    }

    // 【MyQuests】
    match /my_quests/{myQuestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      
      // ▼▼▼ update と delete を明示的に分離 ▼▼▼
      allow update: if request.auth != null && request.auth.uid == resource.data.uid;
      allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
      // ▲▲▲
    }

    // 【Posts】
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
      // 【Likes】
      match /likes/{userId} {
        allow read: if request.auth != null;
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }

      // 【Comments】
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      }
    }
    
    // 【Friendships】
    match /friendships/{friendshipId} {
      allow read: if request.auth != null;
      // ▼▼▼ 'quest_pending' を許可リストに追加 ▼▼▼
      allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId
                    && (request.resource.data.status == "pending" || request.resource.data.status == "quest_pending");
      allow update: if request.auth != null && request.auth.uid == resource.data.receiverId
                    && (resource.data.status == "pending" || resource.data.status == "quest_pending") //
                    && (request.resource.data.status == "accepted" || request.resource.data.status == "declined");
      // ▲▲▲
      allow delete: if request.auth != null && (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
    }
  }
}